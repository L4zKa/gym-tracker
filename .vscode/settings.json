{
  "editor.formatOnSave": true, // optional: Prettier nicht doppelt laufen lassen
  "editor.codeActionsOnSave": {
    "source.fixAll": "always", // alle Fixer erlauben
    "source.fixAll.eslint": "always" // speziell ESLint aktivieren
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true
}
